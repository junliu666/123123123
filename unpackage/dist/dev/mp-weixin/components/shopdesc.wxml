<view class="shop-wrapper"><view class="shop-left"><image class="shop-img" src="{{value.icon}}" mode></image></view><view class="shop-right"><view class="name-location"><view class="name">{{''+value.name+''}}</view><view class="location">{{''+value.location+''}}</view></view><view class="star"><block wx:for="{{starIndex}}" wx:for-item="newItem" wx:for-index="newIndex" wx:key="newIndex"><view><block wx:if="{{value.star>newItem}}"><image class="star-img" src="../static/starActive.png" mode></image></block><block wx:if="{{value.star<newItem||value.star==newItem}}"><image class="star-img" src="../static/starSleep.png" mode></image></block></view></block></view><view class="type">{{''+value.type+''}}</view><view class="tag-wrapper"><block wx:for="{{value.tag}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="tag">{{''+item+''}}</view></block></view><view class="sale"><view class="small-icon">惠</view><block wx:for="{{value.sale}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="small-text"><block wx:if="{{index<value.sale.length-1}}"><text class="text">{{item+","}}</text></block><block wx:if="{{index==value.sale.length-1}}"><text class="text">{{item}}</text></block></view></block></view><view class="send"><view class="small-icon">送</view><block wx:for="{{value.send}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="small-text"><block wx:if="{{index<value.send.length-1}}"><text class="text">{{item+","}}</text></block><block wx:if="{{index==value.send.length-1}}"><text class="text">{{item}}</text></block></view></block></view></view></view>